{{-- EmptyStates Component --}}
{{-- Provides reusable empty state components for various dashboard sections --}}
{{-- Props: type (string), loading (boolean), error (string), onRetry (function) --}}

{{-- Generic Empty State --}}
<template id="empty-state-component">
  @if(loading)
    <div class="loading">
      <div class="spinner"></div>
      <p>{{ message || 'Loading...' }}</p>
    </div>
  @elseif(error)
    <div class="error">
      <p>{{ error }}</p>
      @if(showRetry)
        <button type="button" class="retry-btn">Retry</button>
      @endif
    </div>
  @else
    <div class="empty-state {{ type }}">
      @if(icon)
        <div class="empty-icon">
          {!! icon !!}
        </div>
      @endif
      <p class="empty-message">{{ message }}</p>
      @if(hint)
        <p class="empty-hint">{{ hint }}</p>
      @endif
      @if(action)
        <button type="button" class="empty-action">{{ action }}</button>
      @endif
    </div>
  @endif
</template>

