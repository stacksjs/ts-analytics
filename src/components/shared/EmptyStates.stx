<style>
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 2rem;
  background: var(--bg2);
  border: 1px solid var(--border);
  border-radius: 8px;
}
.empty-icon {
  margin-bottom: 1rem;
  opacity: 0.5;
}
.empty-icon-sm {
  margin-bottom: 0.5rem;
  opacity: 0.5;
}
.empty-message {
  font-size: 0.875rem;
  margin-bottom: 0.25rem;
}
.empty-hint {
  font-size: 0.75rem;
  opacity: 0.8;
  margin-top: 0.5rem;
}
.empty-action {
  margin-top: 1rem;
  padding: 0.5rem 1rem;
  background: var(--accent);
  border: none;
  border-radius: 6px;
  color: white;
  font-size: 0.8125rem;
  cursor: pointer;
  transition: background 0.15s ease;
}
.empty-action:hover {
  background: var(--accent2);
}
.empty-cell {
  text-align: center;
  color: var(--muted);
  padding: 1.5rem;
  font-size: 0.8125rem;
}
.goals-empty {
  padding: 1.5rem;
  text-align: center;
  color: var(--muted);
  font-size: 0.8125rem;
}
.heatmap-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--muted);
  padding: 2rem;
}
.loading {
  text-align: center;
  padding: 2rem;
}
.loading .spinner {
  width: 24px;
  height: 24px;
  border: 2px solid var(--border);
  border-top-color: var(--accent);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin: 0 auto 0.5rem;
}
.loading p {
  color: var(--muted);
  font-size: 0.875rem;
}
.error {
  text-align: center;
  padding: 2rem;
  color: var(--error);
}
.retry-btn {
  margin-top: 0.5rem;
  padding: 0.375rem 0.75rem;
  background: var(--bg3);
  border: 1px solid var(--border);
  border-radius: 6px;
  color: var(--text);
  cursor: pointer;
  font-size: 0.8125rem;
}
.retry-btn:hover {
  background: var(--bg2);
}
@keyframes spin {
  to { transform: rotate(-360deg); }
}
</style>
