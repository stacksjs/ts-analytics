<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title id="pageTitle">Detail - Analytics</title>
</head>
<body class="bg-gray-900 text-gray-200 font-sans antialiased min-h-screen p-8">
  <div class="max-w-6xl mx-auto">
    <a id="backLink" href="/dashboard" class="inline-flex items-center gap-1 text-blue-400 hover:text-blue-300 hover:underline mb-4">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Dashboard
    </a>

    <header class="mb-6">
      <h1 id="headerTitle" class="flex items-center gap-3 text-2xl font-semibold text-white">
        <svg id="headerIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"></svg>
        <span id="headerText">Loading...</span>
      </h1>
    </header>

    <div class="mb-4">
      <input
        type="text"
        id="search"
        placeholder="Search..."
        oninput="filterData()"
        class="w-full max-w-xs px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white placeholder-gray-500 focus:outline-none focus:border-blue-500"
      >
    </div>

    <div id="content" class="text-gray-400 text-center py-8">Loading...</div>
  </div>

  <script>
    // Get params from URL and global config
    const urlParams = new URLSearchParams(window.location.search)
    const API = window.ANALYTICS_API || urlParams.get('api') || window.location.origin
    const SITE_ID = urlParams.get('siteId') || window.ANALYTICS_SITE_ID || ''

    // Extract section from URL path
    const pathMatch = window.location.pathname.match(/\/dashboard\/(.+)/)
    const SECTION = pathMatch ? pathMatch[1] : 'pages'

    // Section metadata
    const sections = {
      pages: {
        title: 'Pages',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>'
      },
      referrers: {
        title: 'Referrers',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>'
      },
      devices: {
        title: 'Devices',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>'
      },
      browsers: {
        title: 'Browsers',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>'
      },
      countries: {
        title: 'Countries',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>'
      },
      campaigns: {
        title: 'Campaigns',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>'
      },
      events: {
        title: 'Events',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>'
      },
      goals: {
        title: 'Goals',
        icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>'
      }
    }

    const sectionConfig = sections[SECTION] || sections.pages

    // Update UI
    document.getElementById('pageTitle').textContent = sectionConfig.title + ' - Analytics'
    document.getElementById('backLink').href = '/dashboard?siteId=' + SITE_ID
    document.getElementById('headerIcon').innerHTML = sectionConfig.icon
    document.getElementById('headerText').textContent = sectionConfig.title

    let allData = []
    let filteredData = []
    let currentPage = 1
    const pageSize = 50

    async function loadData() {
      try {
        const res = await fetch(`${API}/api/sites/${SITE_ID}/${SECTION}`)
        if (!res.ok) throw new Error('Failed to load')
        const data = await res.json()
        allData = data[SECTION] || data.pages || data.referrers || data.browsers || data.countries || data.campaigns || data.events || data.goals || []
        filteredData = [...allData]
        renderData()
      } catch (err) {
        document.getElementById('content').innerHTML = '<p class="text-red-400 text-center py-8">Failed to load data</p>'
      }
    }

    function filterData() {
      const query = document.getElementById('search').value.toLowerCase()
      filteredData = query
        ? allData.filter(item => Object.values(item).some(val => String(val).toLowerCase().includes(query)))
        : [...allData]
      currentPage = 1
      renderData()
    }

    function renderData() {
      if (filteredData.length === 0) {
        document.getElementById('content').innerHTML = '<p class="text-gray-400 text-center py-8">No data available</p>'
        return
      }

      const start = (currentPage - 1) * pageSize
      const pageData = filteredData.slice(start, start + pageSize)
      const totalPages = Math.ceil(filteredData.length / pageSize)
      const keys = Object.keys(filteredData[0])

      let html = '<div class="overflow-x-auto"><table class="w-full">'
      html += '<thead><tr class="border-b border-gray-700">'
      keys.forEach(k => html += `<th class="px-3 py-3 text-left text-gray-400 font-medium text-sm">${formatKey(k)}</th>`)
      html += '</tr></thead><tbody>'

      pageData.forEach(item => {
        html += '<tr class="border-b border-gray-800 hover:bg-gray-800/50">'
        keys.forEach(k => html += `<td class="px-3 py-3 text-sm">${formatValue(item[k], k)}</td>`)
        html += '</tr>'
      })
      html += '</tbody></table></div>'

      if (totalPages > 1) {
        html += `<div class="flex items-center justify-center gap-4 mt-4">
          <button onclick="goToPage(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}
            class="px-4 py-2 bg-gray-700 hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed rounded text-sm">Previous</button>
          <span class="text-gray-400 text-sm">Page ${currentPage} of ${totalPages}</span>
          <button onclick="goToPage(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}
            class="px-4 py-2 bg-gray-700 hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed rounded text-sm">Next</button>
        </div>`
      }

      document.getElementById('content').innerHTML = html
    }

    function goToPage(page) { currentPage = page; renderData() }

    function formatKey(key) {
      return key.replace(/([A-Z])/g, ' $1').replace(/^./, s => s.toUpperCase())
    }

    function formatValue(value, key) {
      if (value == null) return '-'
      if ((key.includes('time') || key.includes('Time')) && typeof value === 'number') {
        const mins = Math.floor(value / 60000)
        const secs = Math.floor((value % 60000) / 1000)
        return `${mins}:${secs.toString().padStart(2, '0')}`
      }
      if ((key.includes('rate') || key.includes('Rate') || key === 'percentage') && typeof value === 'number')
        return value.toFixed(1) + '%'
      return typeof value === 'number' ? value.toLocaleString() : String(value)
    }

    loadData()
  </script>
</body>
</html>
